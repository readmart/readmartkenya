{ 
  "rewrites": [ 
    { "source": "/api/auth/(.*)", "destination": "/api/auth" }, 
    { "source": "/api/payments/(.*)", "destination": "/api/payments" }, 
    { "source": "/api/kopokopo/(.*)", "destination": "/api/payments" }, 
    { "source": "/api/(.*)", "destination": "/api/$1" }, 
    { "source": "/((?!api/).*)", "destination": "/index.html" } 
  ], 
  "headers": [ 
    { 
      "source": "/api/(.*)", 
      "headers": [ 
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" }, 
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, x-kopokopo-signature, x-k2-signature" },
        { "key": "X-Frame-Options", "value": "DENY" } 
      ] 
    } 
  ] 
} 
